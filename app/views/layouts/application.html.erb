<!DOCTYPE html>
<html>
<head>
  <title>Cookbook</title>
  <!-- Latest compiled and minified CSS -->
  <%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' %>
  <%= javascript_include_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
<% if current_user.nil? %>
  <%= link_to "Login", new_session_url %>
  <%= link_to "Create new user", new_user_url %>
<% else %>
  <%= current_user.email %>
  <%= button_to "Logout", session_url, method: :delete %>
<% end %>
</nav>

  <%= yield %>

</body>
</html>
