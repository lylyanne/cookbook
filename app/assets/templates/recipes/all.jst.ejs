<div class="container-fluid">
  <div class="row">
    <div class="col-xs-3">
      <div class="panel panel-primary" id="panels">
        <div class="panel-heading">Food Preferences</div>
        <% food_preferences.forEach(function (fp) { %>
        <p><%= fp.escape("name") %></p>
        <% }) %>
      </div>
    </div>
    <div class="col-xs-9">
      <% if (recipes.length === 0) { %>
        <p class="text-center not-found">
          Sorry, you don't have any recipes.
        </p>
      <% } else { %>
        <div class="recipe"></div>
      <% } %>
    </div>
  </div>
</div>
